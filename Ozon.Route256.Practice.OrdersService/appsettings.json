{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Graylog"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Graylog",
        "Args": {
          "HostnameOrAddress": "graylog",
          "Port": 12201,
          "TransportType": "Udp"
        }
      }
    ]
  },
  "KafkaConfiguration": {
    "Brokers": "broker-1:9091,broker-1:9092,broker-1:9093",
    "Topics": {
      "NewOrderTopic": "pre_orders",
      "OrderTopic": "orders_events"
    },
    "ConsumerGroup": "new_order_group"
  },
  "DbOptions": {
    "ClusterName": "cluster",
    "DatabaseName": "orders-service",
    "User": "test",
    "Password": "test"
  },
  "AllowedHosts": "*"
}
